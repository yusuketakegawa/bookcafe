<%= render "devise/shared/header" %>

<div class="wrapper">
  <div class="side-bar">
    <div class="side-bar-header">
       <div class="header-name">
          <% if user_signed_in?%>
          <%= link_to current_user.nickname, "hoge"%>
          <% end %>
       </div>
       <div class="create-room">
         <%=  link_to 'roomを作成する', "hoge" %>
       </div>
    </div>
  </div>




  <div class="main-bar">
    <div class="main-header">
      <% if user_signed_in?%>
        <div class="greeting">
          ようこそ、
          <%= link_to "#{current_user.nickname}さん", "hoge", class: :greeting_link %>
        </div>
      <% end %>
    </div>
    <!--ここから-->
   <div class='main-book'>
    <h2 class='main-book-title'>本の一覧紹介</h2>
    <ul class='book-lists'>

      <% @books.each do |book| %>
      <li class='list'>
        <%= link_to book_path(book.id)  do %>
        <div class='book-img-view'>
          <%= image_tag book.image.variant(resize: '250x300'), class: "book_image" %>

          <div class='book-information'>
            <div class='book-nickname'>
              <span>タイトル<br> <%= book.title %><br> ジャンル<br>  <%= book.genre.name%></span>
            </div>
          </div>
        </div>
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>
    <!--メインの最後-->
  </div>
<!--最終-->
</div>


<%= render "devise/shared/footer"%>